<h4>SendMails</h4>
<form method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <div class="d-flex">
    <select name="meeting" class="form-select">
      <option >Select a meeting</option>
      <% Meeting.all.select(:id, :subject).each do |meeting| %>
        <option value=<%= meeting.id %>><%= meeting.subject%></option>
        <% end %>
      </select>
      <button type="submit" class="btn btn-primary">Send</button>
    </div>
  </form>
