<div class="container py-2">
  <div class="row">
    <div class="signup shadow rounded col-md-6">
      <div class="p-3">
        <h3>Sign Up </h3>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="form-group p-2">
          <%= f.label :email %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control",placeholder: "sthabikash@gmail.com", required: true %>
        </div>

        <div class="form-group p-2">
          <%= f.label :username %>
          <%= f.text_field :username, autofocus: true, class:"input", class: "form-control", placeholder: "Bikash", required: true %>
        </div>

        <div class="form-group p-2">
          <%= f.label :contact_number %>
          <%= f.number_field :contact, class: "form-control", placeholder: "9876543210", required: true %>
        </div>

        <div class="form-group p-2">
          <%= f.label :address %>
          <%= f.text_field :address, class: "form-control", placeholder: "Shri Raj Bhawan, Kathmandu", required: true %>
        </div>
        <div class="form-group p-2">
          <%= f.label :role, class:"me-3" %>
          <%= f.select(:role, User.roles.keys.map {|role| [role.titleize,role]}) %>
        </div>

        <div class="form-group p-2">
          <%= f.label :password %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %>
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control", required: true, placeholder: "******" %>
        </div>

        <div class="form-group p-2">
          <%= f.label :password_confirmation %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", required: true, placeholder: "******" %>
        </div>

        <div class="actions p-2">
          <%= f.submit "Sign up", class: "btn btn-primary w-100" %>
        </div>
        <% end %>

        <%= render "devise/shared/links" %>

      </div>
    </div>
  </div>
</div>