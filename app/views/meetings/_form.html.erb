<%= form_with(model: meeting) do |form| %>
  <% if meeting.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(meeting.errors.count, "error") %> prohibited this meeting from being saved:</h2>

      <ul>
        <% meeting.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :subject, style: "display: block" %>
    <%= form.text_field :subject %>
  </div>

  <div>
    <%= form.label :members, style: "display: block" %>
    <% User.pluck(:email).each do |member| %>
      <div>
        <input type="checkbox" name= "meeting[members][]" value=<%= member%> /><%= member%>
      </div>
    <% end %>
     
  </div>

  <div>
    <%= form.label :room_id, style: "display: block" %>
    <%= form.select :room_id, Room.pluck(:id).map { |room| ["Room-#{room}", room]} %>
  </div>

  <div>
    <%= form.label :date, style: "display: block" %>
    <%= form.date_field :date %>
  </div>

  <div>
    <%= form.label :start_time, style: "display: block" %>
    <%= form.time_field :start_time %>
  </div>

  <div>
    <%= form.label :end_time, style: "display: block" %>
    <%= form.time_field :end_time %>
  </div>

  <div>
    <%= form.label :user_id, "Host By", style: "display: block" %>
    <%= form.select :user_id, User.pluck(:email, :id) %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>